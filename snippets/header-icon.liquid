<ul class="shop-element">
  <li class="side-wrap toggle-wrap">
    <button class="navbar-toggle" type="button">
      <span class="menu-icon">
        <i class="feather-menu"></i>
      </span>
    </button>
  </li>
  {%- if settings.search_enable -%}
  <li class="side-wrap search-wrap">
    <a class="search-btn header-icon" data-bs-toggle="modal" href="#seachmodal">
      <span class="icon"><i class="feather-search"></i></span>
    </a>
  </li>
  {%- endif -%}
  <li class="side-wrap user-wrap">
    <div class="user-warp">
      {% if customer %}
      <a class="header-icon" href="{{ routes.account_url }}">
        <span class="icon"><i class="feather-user-check"></i></span>
      </a>
      {% else %}
      <a class="header-icon" href="{{ routes.account_login_url }}">
        <span class="icon"><i class="feather-user"></i></span>
      </a>
      {% endif %}
    </div>
  </li>
  {%- if settings.wishlist_enable -%}
  <li class="side-wrap wishlist-wrap">
    <a class="header-icon" href="/pages/wishlist" title="Wishlist">
      <span class="icon"><i class="feather-heart"></i></span>
      <span class="wishlist-counter count">{{ wishlist.count }}</span>
    </a>
  </li>
  {%- endif -%}
  <li class="side-wrap cart-wrap">
    <div class="shopping-cart">
      <a class="cart-count header-icon" href="javascript:void(0);">
        <span class="icon"><i class="feather-shopping-bag"></i></span>
        <span id="cart-total" class="bigcounter count">{{ cart.item_count }}</span>
      </a>
    </div>
  </li>
</ul>
{% style %}
button.navbar-toggle,
a.header-icon {
  position: relative;
}
button.navbar-toggle span.menu-icon,
a.header-icon span.icon {
  font-size: 18px;
  color: #fefefe;
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgb(222 218 218 / 40%);;
  border-radius: 100%;
  line-height: 0;
  -webkit-transition: color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out;
  -o-transition: color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out;
  transition: color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out;
}
button.navbar-toggle:hover span.menu-icon,
a.header-icon:hover span.icon {
  color: #FFFFFF;
  background-color: var(--font-color-primary);
  border-color: var(--font-color-primary);
}
a.header-icon span.count {
  position: relative;
  background-color: var(--font-color-secondary);
  color: #FFFFFF;
  font-size: 10px;
  width: 18px;
  height: 18px;
  position: absolute;
  top: 0px;
  {% if settings.enable_rtl %}
  left: 0px;
  {% else %}
  right: 0px;
  {% endif %}
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  font-weight: var(--font-custom-weight-header);
}
@media (max-width: 767px) {
  button.navbar-toggle span.menu-icon,
  a.header-icon span.icon {
    font-size: 16px;
    width: 40px;
    height: 40px;
  }
}
@media (max-width: 479px) {
  .wishlist-wrap a.header-icon span.icon, 
  .cart-wrap a.header-icon span.icon {
    {% if settings.enable_rtl %}
    padding-left: 5px;
    {% else %}
    padding-right: 5px;
    {% endif %}
  }
  button.navbar-toggle span.menu-icon,
  a.header-icon span.icon {
    font-size: 18px;
    width: unset;
    height: unset;
    border: none;
  }
  button.navbar-toggle:hover span.menu-icon, 
  a.header-icon:hover span.icon {
    color: var(--font-color-body);
    background-color: transparent;
    border-color: transparent;
  }
  a.header-icon span.count {
    width: 15px;
    height: 15px;
  }
}
{% endstyle %}