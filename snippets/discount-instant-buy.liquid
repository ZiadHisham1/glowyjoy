{% if product.available %}
<a href="javascript:void(0)" class="discount-buy-btn pointer-cursor" id="buyNow25" onClick="instantMultiBuying{{ product.id }}(); return false;">
  <span class="button-text">{{ 'products.product.buy_now' | t }}</span>
  <span class="spinner" style="display: none;"></span>
</a>
{% endif %}
<script type="text/javascript">
function instantMultiBuying{{ product.id }}() {
    const button = $('#discount-buy-btn');
    const spinner = button.find('.spinner');
    const buttonText = button.find('.button-text');

    // Helper function to add a delay
    function delay(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
    }

    // Show loading spinner and disable button
    function showLoading() {
        spinner.show();
        button.css('background', "#000");
    }

    // Hide loading spinner and enable button
    function hideLoading() {
        spinner.hide();
        // button.prop('disabled', false);
    }

    // Find all checked option divs within the context
    const forms = [];
    $(".checked-option").each(function() {
        // Collect all forms inside the checked option div
        $(this).find("form").each(function() {
            forms.push($(this).serialize());
        });
    });

    // Function to handle AJAX requests with delay
    async function processFormsSequentially(forms) {
        showLoading(); // Show spinner and disable button
        for (let i = 0; i < forms.length; i++) {
            let serializedData = forms[i];
            try {
                await jQuery.post('/cart/add.js', serializedData);
                console.log("Item added to cart:", serializedData);
            } catch (error) {
                console.error("Error adding item to cart:", error.responseText);
                // Handle error (e.g., show a message to the user)
                showConfirmationMessage("There was an issue adding some items to your cart.");
            }
            // Delay before the next request
            await delay(1000); // Adjust delay as needed (1000ms = 1 second)
        }
        
        // Hide spinner and show confirmation message
        hideLoading();
        showConfirmationMessage("All items have been added to your cart. Redirecting to checkout...");
        
        // Redirect to checkout after a short delay
        setTimeout(function() {
            window.location.href = '/checkout'; // Redirect after delay
        }, 2000); // Adjust the delay (2000ms = 2 seconds) as needed
    }

    // Start processing forms
    processFormsSequentially(forms);
}

</script>
