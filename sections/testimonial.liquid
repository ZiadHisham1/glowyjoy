<section class="testimonial-area" {% if section.settings.testi_bgimg_enable %}style="background-image: url('{% if section.settings.testi_bgimg %}{{ section.settings.testi_bgimg | image_url }}{% else %}https://dummyimage.com/1920x800/f7f7f7/999999{% endif %}');"{% endif %}>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="section-capture">
        <div class="section-title">
          {% if section.settings.section_title != '' %}
          <h2 style=" background-image: linear-gradient(45deg, #B2A5FF, #3F309A); -webkit-background-clip: text; color: transparent; font-weight:700;" >{{ section.settings.section_title }}</h2>
          {% endif %}
          {% if section.settings.section_desc != '' %}
          <p style="color: #fff;">{{ section.settings.section_desc }}</p>
          {% endif %}
        </div>
        <div class="swiper-buttons">
          <button class="swiper-prev swiper-prev-{{ section.id }}"><i class="ri-arrow-left-line"></i></button>
          <button class="swiper-next swiper-next-{{ section.id }}"><i class="ri-arrow-right-line"></i></button>
        </div>
      </div>

      <div class="testimonial-block">
        <div class="testimonial-slider swiper" id="testimonial-slider-{{ section.id }}">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="testimonial-main">
                <div class="testimonial-author">
                  <div class="author-image">
                    <div class="image-block">
                      <span class="image">
                        {% comment %}
                        <img src="https://dummyimage.com/512x512/333333/999999" class="img-fluid" alt="image">
                        {% endcomment %}
                        
                        {%- if block.settings.testimonial_image -%}
                        {{ block.settings.testimonial_image | image_url: width: 512 | image_tag:
                        loading: 'lazy',
                        width: block.settings.testimonial_image.width,
                        height: block.settings.testimonial_image.height,
                        class: "img-fluid image-1",
                        alt: block.settings.testimonial_image.alt | escape }}
                        {%- else -%}  
                        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                      </span>
                    </div>
                    <div class="author-bio">
                      {% if block.settings.testimonial_title != '' %}
                      <h4 style="color: {{ block.settings.title_color }}" class="title">{{ block.settings.testimonial_title }}</h4>
                      {% endif %}
                      {% if block.settings.testimonial_subtitle != '' %}
                      <span class="subtitle">{{ block.settings.testimonial_subtitle }}</span>
                      {% endif %}
                    </div>
                  </div>
                  <div class="author-review">
                    <span class="testi-review">
                      <i class="fa fa-star{% if block.settings.pro_testi_review == '1' or block.settings.pro_testi_review == '2' or block.settings.pro_testi_review == '3' or block.settings.pro_testi_review == '4' or block.settings.pro_testi_review == '5' %} fill {% endif %}"></i>
                      <i class="fa fa-star{% if block.settings.pro_testi_review == '2' or block.settings.pro_testi_review == '3' or block.settings.pro_testi_review == '4' or block.settings.pro_testi_review == '5' %} fill {% endif %}"></i>
                      <i class="fa fa-star{% if block.settings.pro_testi_review == '3' or block.settings.pro_testi_review == '4' or block.settings.pro_testi_review == '5' %} fill {% endif %}"></i>
                      <i class="fa fa-star{% if block.settings.pro_testi_review == '4' or block.settings.pro_testi_review == '5' %} fill {% endif %}"></i>
                      <i class="fa fa-star{% if block.settings.pro_testi_review == '5' %} fill {% endif %}"></i>
                    </span>
                  </div>
                </div>
                {% if block.settings.testimonial_desc != '' %}
                <div class="testimonial-desc">
                  <p class="desc">{{ block.settings.testimonial_desc }}</p>
                </div>
                {% endif %}
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
        <div class="swiper-buttons mobile">
          <button class="swiper-prev swiper-prev-{{ section.id }}"><i class="ri-arrow-left-line"></i></button>
          <button class="swiper-next swiper-next-{{ section.id }}"><i class="ri-arrow-right-line"></i></button>
        </div>
        {% if section.settings.testimonial_button_enable %}
        <div class="collection-button">
          <a href="{{ section.settings.testimonial_button_url }}" class="btn {% if section.settings.testimonial_button_style == 'btn-style1' %}btn-style{% elsif section.settings.testimonial_button_style == 'btn-style2' %}btn-style2{% else %}btn-style3{% endif %}">{{ section.settings.testimonial_button_text }}</a>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
</section>
<script type="text/javascript">
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.swiper#testimonial-slider-{{ section.id }}', {
      slidesPerView: {{ section.settings.testimonial_slider_limit }},
      grid: {
        rows: 1,
        fill: 'row' | 'column',
      },
      spaceBetween: 30,
      observer: true,
      observeParents: true,
      watchSlidesProgress: true,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      navigation: {
        nextEl: '.swiper-next-{{ section.id }}',
        prevEl: '.swiper-prev-{{ section.id }}',
      },
      pagination: {
        el: ".swiper-pagination-{{ section.id }}",
        clickable: true
      },
      // autoplay: {
      //   delay: 5000,
      //   disableOnInteraction: false,
      //   pauseOnMouseEnter: true
      // },
      breakpoints: {
        0: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        320: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        360: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        540: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        640: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        768: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1024: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1199: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1399: {
          slidesPerView: 3,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1499: {
          slidesPerView: {{ section.settings.testimonial_slider_limit }},
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        }
      }
    });
  });
</script>
