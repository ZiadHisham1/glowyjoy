<style>

@font-face {
  font-family: 'KGHAPPYShadow';
  src: url('{{ 'KGHAPPYShadow.ttf' | asset_url }}') format('truetype');
  font-weight: normal;
  font-style: normal;
}
.testimonial-area {
  position: relative;
  padding-top: {{ section.settings.testi_padding_top }}px;
  padding-bottom: {{ section.settings.testi_padding_bottom }}px;
  {% if section.settings.testi_bgimg_enable %}
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  {% endif %}
  {% if section.settings.testi_bgcolor_enable %}
  background-color: {{ section.settings.testi_bgcolor }};
  {% endif %}
  position: relative;
}
@media (max-width: 1199px) {
  .testimonial-area {
    padding-top: {{ section.settings.testi_padding_top_ip }}px;
    padding-bottom: {{ section.settings.testi_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .testimonial-area {
    padding-top: {{ section.settings.testi_padding_top_xs }}px;
    padding-bottom: {{ section.settings.testi_padding_bottom_xs }}px;
  }
}

/* section title css */
.testimonial-area .section-capture {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
@media (max-width: 479px) {
  .testimonial-area .section-capture {
    flex-direction: column;
  }
  .testimonial-area .swiper-buttons {
    display: none;
  }
}

/* testimonial css */
.testimonial-area .testimonial-block .testimonial-main {
  background-color: #FFFFFF;
  padding: 50px 30px;
  border-radius: var(--sti-border-radius);
  border: solid thick #d945ff;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image {
  display: flex;
  align-items: center;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image .image-block span.image {
  border: 10px solid #FFFFFF;
  border-radius: 100%;
  box-shadow: 0px 0px 10px rgb(51 51 51 / 10%);
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image .image-block span.image svg {
  width: 70px;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image .image-block span.image img {
  width: 70px;
  border-radius: 100%;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image .author-bio {
  {% if settings.enable_rtl %}
  padding-right: 20px;
  {% else %}
  padding-left: 20px;
  min-width:170px;
  {% endif %}
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image .author-bio h4.title {
  color: var(--font-color-primary);
  font-size: 18px;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-image .author-bio span.subtitle {
  margin-top: 8px;
  font-weight: var(--font-custom-weight-header);
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-review span.testi-review {
  display: flex;
  line-height: 0;
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-review span.testi-review i {
  color: var(--font-color-primary);
  font-size: 14px;
  {%- if settings.enable_rtl -%}
  margin-left: 5px;
  {%- else -%}
  margin-right: 5px;
  {%- endif -%}
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-review span.testi-review i:last-child {
  {%- if settings.enable_rtl -%}
  margin-left: 0px;
  {%- else -%}
  margin-right: 0px;
  {%- endif -%}
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-review span.testi-review i::before {
  content: "\f006";
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-review span.testi-review i.fill::before {
  content: "\f005";
}
.testimonial-area .testimonial-block .testimonial-main .testimonial-desc {
  margin-top: 22px;
}
@media (max-width: 991px) {
  .testimonial-area .testimonial-block .testimonial-main .testimonial-author {
    flex-direction: column;
    align-items: flex-start;
  }
  .testimonial-area .testimonial-block .testimonial-main .testimonial-author .author-review {
    margin-top: 20px;
  }
}
@media (max-width: 991px) {
  .testimonial-area .testimonial-block .testimonial-main {
    padding: 30px 12px;
  }
}

{% if section.settings.testimonial_button_enable %}
/* section button css */
.testimonial-area .testimonial-block .collection-button {
  margin-top: 60px;
  text-align: center;
}
@media (max-width: 1199px) {
  .testimonial-area .testimonial-block .collection-button {
    margin-top: 50px;
  }
}
@media (max-width: 767px) {
  .testimonial-area .testimonial-block .collection-button {
    margin-top: 30px;
  }
}
{% endif %}

/* mobile slider button css */
.testimonial-area .testimonial-block .swiper-buttons.mobile {
  display: none;
}
@media (max-width: 479px) {
  .testimonial-area .testimonial-block .swiper-buttons.mobile {
    display: flex;
  } 
}
