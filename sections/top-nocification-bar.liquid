{%- if section.settings.topbar_notification_enable -%}
<section class="top-notification-bar">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="notification-block">
            <ul class="notification-entry">
              <li class="notify-wrap social-block">
                {% render 'social-media' %}
              </li>
              <li class="notify-wrap text-block">
                {%- if section.settings.rich_text1 -%}
                <div class="richtext">
                  {{ section.settings.rich_text1 }}
                </div>
                {%- endif -%}
              </li>
              <li class="notify-wrap close-block">
                <div class="close-btn">
                  <button class="notification-close-btn"><i class="ri-close-line"></i></button>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
</section>
<script>
  window.addEventListener("DOMContentLoaded", function() {
    var nToggle = $('.notification-close-btn');
    nToggle.on('click', function() {
      $('.top-notification-bar').slideToggle();
    });
  });
</script>
{%- endif -%}
{% schema %}
{
  "name": "Topbar notification",
  "settings": [
    {
      "type": "header",
      "content": "Show topbar notification"
    },
    {
      "type": "checkbox",
      "id": "topbar_notification_enable",
      "label": "Show topbar notification",
      "default": true
    },
    {
      "type": "header",
      "content": "Section background color"
    },
    {
      "type": "color",
      "id": "topbar_notification_bg_color",
      "label": "Section background color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "topbar_notification_txt_color",
      "label": "Section text color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "link"
    },
    {
      "type": "richtext",
      "id": "rich_text1",
      "label": "Text"
    }
  ]
}
{% endschema %}
<style>
.top-notification-bar {
  position: relative;
  background-color: {{ section.settings.topbar_notification_bg_color }};
  z-index: 1;
  padding: 8px 0;
}
.top-notification-bar .notification-block {
  position: relative;
}
.top-notification-bar .notification-block ul {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.top-notification-bar .notification-block ul li.notify-wrap {
  width: 33.33%;
}
@media (max-width: 991px) {
  .top-notification-bar .notification-block ul li.notify-wrap.social-block,
  .top-notification-bar .notification-block ul li.notify-wrap.text-block {
    width: 50%;
  } 
  .top-notification-bar .notification-block ul li.notify-wrap.close-block {
    display: none;
  }
}
@media (max-width: 600px) {
  .top-notification-bar .notification-block ul li.notify-wrap.text-block {
    width: 100%;
  } 
  .top-notification-bar .notification-block ul li.notify-wrap.social-block {
    display: none;
  }
}
/* text css */
.top-notification-bar .notification-block ul li.notify-wrap .richtext {
  text-align: center;
}
.top-notification-bar .notification-block ul li.notify-wrap .richtext a,
.top-notification-bar .notification-block ul li.notify-wrap .richtext p {
  color: {{ section.settings.topbar_notification_txt_color }};
  font-weight: 400;
}
.top-notification-bar .notification-block ul li.notify-wrap .richtext a:hover {
  opacity: 0.7;
}
@media (max-width: 991px) {
  .top-notification-bar .notification-block ul li.notify-wrap .richtext {
    {% if settings.enable_rtl %}
    text-align: left;
    {% else %}
    text-align: right;
    {% endif %}
  }
}
@media (max-width: 600px) {
  .top-notification-bar .notification-block ul li.notify-wrap .richtext {
    text-align: center;
  }
}
/* close btn css */
.top-notification-bar .notification-block .close-btn {
  display: flex;
  justify-content: flex-end;
}
.top-notification-bar .notification-block .close-btn button.notification-close-btn {
  color: {{ section.settings.topbar_notification_txt_color }};
  font-size: 20px;
  display: flex;
  line-height: 1;
}
</style>