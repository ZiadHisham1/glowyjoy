<style>
.advance-feature-area {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  {% if section.settings.section_bg_color_enable %}
  background: radial-gradient(circle at top, #231b53 20%, #000 80%);
  {% endif %}
  {% if section.settings.section_bg_image_enable %}
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  {% endif %}
  {% if section.settings.border_enable %}
  border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
  {% endif %}
}
.white-color{
  border-color: rgba(255, 255, 255, 0.6);
}
p, h4 {
  color: #fff;
}
@media (max-width: 1199px) {
  .advance-feature-area {
    padding-top: {{ section.settings.section_padding_top_ip }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .advance-feature-area {
    padding-top: {{ section.settings.section_padding_top_xs }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
  }
}

/* section title css */
.advance-feature-area .section-capture {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
@media (max-width: 479px) {
  .advance-feature-area .section-capture {
    flex-direction: column;
  }
  .advance-feature-area .swiper-buttons {
    display: none;
    border-color: #fff;
  }
}

/* feature css */
.advance-feature-area .advance-feature .feature-main {
  position: relative;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 50px 0px;
}
.advance-feature-area .advance-feature .feature-slider .swiper-wrapper .swiper-slide.swiper-slide-visible.swiper-slide-active .feature-main::before,
.advance-feature-area .advance-feature .feature-slider .swiper-wrapper .swiper-slide.swiper-slide-visible.swiper-slide-next .feature-main::before {
  background-color: var(--theme-border-color);
  content: "";
  position: absolute;
  {% if settings.enable_rtl %}
  left: 0px;
  {% else %}
  right: 0px;
  {% endif %}
  height: 100%;
  width: 1px;
}
.advance-feature-area .advance-feature .feature-main .feature-content {
  width: 50%;
  {% if settings.enable_rtl %}
  padding-left: 15px;
  {% else %}
  padding-right: 15px;
  {% endif %}
}
.advance-feature-area .advance-feature .feature-main .feature-content h2.count {
  color: #FFFFFF;
  font-size: 60px;
  text-shadow: 1px 0 0 var(--font-color-primary), 0 1px 0 var(--font-color-primary), -1px 0 0 var(--font-color-primary), 0 -1px 0 var(--font-color-primary);
  font-weight: var(--font-custom-weight-section-header);
  opacity: 0.2;
  -webkit-transition: color 0.5s ease-in-out,text-shadow 0.5s ease-in-out,opacity 0.5s ease-in-out,text-decoration-color 0.5s ease-in-out;
  -o-transition: color 0.5s ease-in-out,text-shadow 0.5s ease-in-out,opacity 0.5s ease-in-out,text-decoration-color 0.5s ease-in-out;
  transition: color 0.5s ease-in-out,text-shadow 0.5s ease-in-out,opacity 0.5s ease-in-out,text-decoration-color 0.5s ease-in-out;
  line-height: 1;
}
.advance-feature-area .advance-feature .feature-slider .swiper-wrapper .swiper-slide.swiper-slide-visible.swiper-slide-next .feature-main .feature-content h2.count {
  opacity: 1;
}
.advance-feature-area .advance-feature .feature-main .feature-content h4.title {
  font-size: 18px;
  margin-top: 19px;
}
.advance-feature-area .advance-feature .feature-main .feature-content p.desc {
  margin-top: 17px;
}
.advance-feature-area .advance-feature .feature-main .feature-image {
  width: 50%;
  {% if settings.enable_rtl %}
  padding-right: 15px;
  {% else %}
  padding-left: 15px;
  {% endif %}
}
.advance-feature-area .advance-feature .feature-main .feature-image span.image {
  display: block;
  {% if settings.enable_rtl %}
  transform: translateX(calc(-50% + 30px));
  {% else %}
  transform: translateX(calc(50% - 30px));
  {% endif %}
}
.advance-feature-area .advance-feature .feature-main .feature-image span.image svg {
  width: 100%;
}
{% if settings.enable_rtl %}
.advance-feature-area .advance-feature .feature-main .feature-image span.image img {
  transform: scaleX(-1);
}
{% endif %}
@media (max-width: 1399px) {
  .advance-feature-area .advance-feature .feature-main {
    padding: 30px 0px;
  }
}
@media (max-width: 600px) {
  .advance-feature-area .advance-feature .feature-main .feature-content {
    {% if settings.enable_rtl %}
    padding-left: 6px;
    {% else %}
    padding-right: 6px;
    {% endif %}
  }
  .advance-feature-area .advance-feature .feature-main .feature-image {
    {% if settings.enable_rtl %}
    padding-right: 6px;
    {% else %}
    padding-left: 6px;
    {% endif %}
  }
}
@media (max-width: 600px) {
  .advance-feature-area .advance-feature .feature-main .feature-content h2.count {
    opacity: 1;
  }
}

/* mobile slider button css */
.advance-feature-area .advance-feature .swiper-buttons.mobile {
  display: none;
}
@media (max-width: 479px) {
  .advance-feature-area .advance-feature .swiper-buttons.mobile {
    display: flex;
  } 
}
</style>