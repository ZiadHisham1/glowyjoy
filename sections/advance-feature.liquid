<section class="advance-feature-area" {% if section.settings.section_bg_image_enable %}style="background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1920x800/f7f7f7/999999{% endif %}');"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="section-capture">
          <div class="section-title">
            {% if section.settings.section_title != '' %}
            <h2>{{ section.settings.section_title }}</h2>
            {% endif %}
            {% if section.settings.section_desc != '' %}
            <p>{{ section.settings.section_desc }}</p>
            {% endif %}
          </div>
          <div class="swiper-buttons">
            <button class="swiper-prev swiper-prev-{{ section.id }}"><i class="ri-arrow-left-line"></i></button>
            <button class="swiper-next swiper-next-{{ section.id }}"><i class="ri-arrow-right-line"></i></button>
          </div>
        </div>
        <div class="advance-feature">
          <div class="feature-slider swiper" id="advance-feature-slider">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="feature-main">
                  <div class="feature-content">
                    {% if block.settings.feature_count != '' %}
                    <h2 class="count">{{ block.settings.feature_count }}</h2>
                    {% endif %}
                    {% if block.settings.feature_title != '' %}
                    <h4 class="title">{{ block.settings.feature_title }}</h4>
                    {% endif %}
                    {% if block.settings.feature_desc != '' %}
                    <p class="desc">{{ block.settings.feature_desc }}</p>
                    {% endif %}
                  </div>
                  <div class="feature-image">
                    <span class="image">
                      {% comment %}
                      <img src="https://dummyimage.com/201x172/e2e2e2/999999" class="img-fluid" alt="image">
                      {% endcomment %}

                      {%- if block.settings.advance_feature_image -%}
                      {{ block.settings.advance_feature_image | image_url: width: 512 | image_tag:
                      loading: 'lazy',
                      width: block.settings.advance_feature_image.width,
                      height: block.settings.advance_feature_image.height,
                      class: "img-fluid image-1",
                      alt: block.settings.advance_feature_image.alt | escape }}
                      {%- else -%}  
                      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </span>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="swiper-buttons mobile">
            <button class="white-color swiper-prev swiper-prev-{{ section.id }}"><i class="whiteColor ri-arrow-left-line"></i></button>
            <button class="white-color swiper-next swiper-next-{{ section.id }}"><i class="whiteColor ri-arrow-right-line"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.swiper#advance-feature-slider', {
      slidesPerView: 3,
      grid: {
        rows: 1,
        fill: 'row' | 'column',
      },
      spaceBetween: 30,
      observer: true,
      observeParents: true,
      watchSlidesProgress: true,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      navigation: {
        nextEl: '.swiper-next-{{ section.id }}',
        prevEl: '.swiper-prev-{{ section.id }}',
      },
      pagination: {
        el: ".swiper-pagination-{{ section.id }}",
        clickable: true
      },
      // autoplay: {
      //   delay: 5000,
      //   disableOnInteraction: false,
      //   pauseOnMouseEnter: true
      // },
      breakpoints: {
        0: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        320: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        360: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        540: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        540: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        640: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        768: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1024: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1199: {
          slidesPerView: 3,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1399: {
          slidesPerView: 3,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        }
      }
    });
  });
</script>

