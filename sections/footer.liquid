.footer-list-wrap ul.footer-list li.footer-newsletter .footer-news-block .news-review span.review i:last-child {
  {%- if settings.enable_rtl -%}
  margin-left: 0px;
  {%- else -%}
  margin-right: 0px;
  {%- endif -%}
}
.footer-list-wrap ul.footer-list li.footer-newsletter .footer-news-block .news-review span.review i::before {
  content: "\f006";
}
.footer-list-wrap ul.footer-list li.footer-newsletter .footer-news-block .news-review span.review i.fill::before {
  content: "\f005";
}

