<style>
:root {
  --color-text: {{ section.settings.text_color }};
  --color-heading: {{ section.settings.heading_color }};
}
.footer-area{
  position: relative;
  padding-top: {{ section.settings.foot_padding_top }}px;
  padding-bottom: {{ section.settings.foot_padding_bottom }}px;
  {% if section.settings.footer_bg_img_enable %}
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  {% endif %}
  background-color: {{ section.settings.footer_bg_color }};
  {% if section.settings.border_enable %}
  {% if template != 'index' and template != 'collection' and template != 'blog' and template != 'search' and template != 'product' %}
  border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
  {% endif %}
  {% endif %}
}
@media (max-width: 1199px){
  .footer-area {
    padding-top: {{ section.settings.foot_padding_top_ipad }}px;
    padding-bottom: {{ section.settings.foot_padding_bottom_ipad }}px;
  }
}
@media (max-width: 767px){
  .footer-area {
    padding-top: {{ section.settings.foot_padding_top_xs }}px;
    padding-bottom: {{ section.settings.foot_padding_bottom_xs }}px;
  }
}

/* main css */
.footer-list-wrap ul.footer-list{ 
  display: flex;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  justify-content: center;
  {%- if settings.enable_rtl -%}
  margin-right: -30px;
  {%- else -%}
  margin-left: -30px;
  {%- endif -%}
  margin-top: -50px;
}
.footer-list-wrap ul.footer-list li.ftlink-li{
  {%- if settings.enable_rtl -%}
  margin-right: 30px;
  {%- else -%}
  margin-left: 30px;
  {%- endif -%}
  margin-top: 50px;
}
@media (max-width: 1199px) {
  .footer-list-wrap ul.footer-list{ 
    margin-top: -40px;
  }
  .footer-list-wrap ul.footer-list li.ftlink-li{
    margin-top: 40px;
  }
}
@media (max-width: 767px) {
  .footer-list-wrap ul.footer-list {
    {%- if settings.enable_rtl -%}
    margin-right: -12px;
    {%- else -%}
    margin-left: -12px;
    {%- endif -%}
  }
  .footer-list-wrap ul.footer-list li.ftlink-li{
    margin-top: 30px;
    {%- if settings.enable_rtl -%}
    margin-right: 12px;
    {%- else -%}
    margin-left: 12px;
    {%- endif -%}
  }
}
@media (max-width: 600px) {
