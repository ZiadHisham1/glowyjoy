<section class="footer-area" {% if section.settings.footer_bg_img_enable %}style="background-image: url('{% if section.settings.footer_bg_img %}{{ section.settings.footer_bg_img | image_url: 'master' }}{% else %}https://dummyimage.com/1920x450/f7f7f7/999999{% endif %}');"{% endif %} data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="footer-list-wrap">
          <ul class="footer-list">
            {% for block in section.blocks %}
            {%- liquid assign row_width = row_width | plus: block.settings.container_width -%}
            {%- case block.type -%}
            {%- when 'footer_menu' -%}
            <li class="ftlink-li link-list width-{{ block.id }}">
              {% assign footer_menu = block.settings.footer_menu_handle %}
              {%- if block.settings.show_nav_title -%}
              <h2 class="ft-title md-d-none">{{ linklists[footer_menu].title }}</h2>
              <a data-bs-toggle="collapse" href="#collapse-{{ linklists[footer_menu].title | handleize }}" class="ft-title"><span>{{ linklists[footer_menu].title }}</span><i class="ri-add-fill"></i></a>
              {%- endif -%}
              <ul class="{% if block.settings.show_nav_title %}collapse {% endif %} footer-sublist link" id="{%- if block.settings.show_nav_title -%}collapse-{{ linklists[footer_menu].title | handleize }}{%- endif -%}">
                {% assign footer_menu = block.settings.footer_menu_handle %}
                {% for link in linklists[footer_menu].links %}
                {% if linklists[footer_menu].links != '' %}
                <li class="ftsublink-li">
                  <a href="{{ link.url }}" class="ft-sublink">{{ link.title }}</a>
                </li>
                {% endif %}
                {% endfor %}
              </ul>
              {%- style -%}
              .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                width: calc({{ block.settings.container_width }}% - 30px);
              }
              @media (max-width: 1199px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }} {
                  width: calc(33.33% - 30px);
                }
              }
              @media (max-width: 767px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }} {
                  width: calc(33.33% - 12px);
                }
              }
              @media (max-width: 600px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }} {
                  width: calc(100% - 12px);
                }
              }
              {%- endstyle -%}
            </li>
            {%- when 'footer_newsletter' -%}
            <li class="ftlink-li footer-newsletter width-{{ block.id }}">
              {%- if block.settings.show_nav_title -%}
              <h2 class="ft-title">{{ block.settings.newsletter_title }}</h2>
              {%- endif -%}

              <div class="footer-news-block">
                {% if block.settings.newsletter_desc != '' %}
                <div class="news-desc">{{ block.settings.newsletter_desc }}</div>
                {% endif %}
                {% render 'newsletter' %}
                <div class="news-review">
                  {% if block.settings.review_title != '' %}
                  <h4 class="title">{{ block.settings.review_title }}</h4>
                  {% endif %}
                  <span class="review">
                    <i class="fa fa-star{% if block.settings.newsletter_review == '1' or block.settings.newsletter_review == '2' or block.settings.newsletter_review == '3' or block.settings.newsletter_review == '4' or block.settings.newsletter_review == '5' %} fill {% endif %}"></i>
                    <i class="fa fa-star{% if block.settings.newsletter_review == '2' or block.settings.newsletter_review == '3' or block.settings.newsletter_review == '4' or block.settings.newsletter_review == '5' %} fill {% endif %}"></i>
                    <i class="fa fa-star{% if block.settings.newsletter_review == '3' or block.settings.newsletter_review == '4' or block.settings.newsletter_review == '5' %} fill {% endif %}"></i>
                    <i class="fa fa-star{% if block.settings.newsletter_review == '4' or block.settings.newsletter_review == '5' %} fill {% endif %}"></i>
                    <i class="fa fa-star{% if block.settings.newsletter_review == '5' %} fill {% endif %}"></i>
                  </span>
                </div>
              </div>

              {%- style -%}
              .footer-list-wrap ul.footer-list li.width-{{ block.id }}{
                width: calc({{ block.settings.container_width }}% - 30px);
              }
              @media (max-width: 1199px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }} {
                  width: calc(50% - 30px);
                }
              }
              @media (max-width: 767px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }} {
                  width: calc(50% - 12px);
                }
              }
              @media (max-width: 600px) {
                .footer-list-wrap ul.footer-list li.width-{{ block.id }} {
                  width: calc(100% - 12px);
                }
              }
              {%- endstyle -%}
            </li>

            {%- endcase -%}
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
