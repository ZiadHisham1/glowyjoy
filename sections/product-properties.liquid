<div class="row">
  <div class="column">
    <section id="seeItInAction-{{ section.id }}">
      <div class="framerBigHold">
        <div class="itemWraper">
          <div class="item">
              <h2>see it <span style="color: #6c7dff; padding-left: 10px;"> in action</span></h2>
          </div>
          <div class="item">
           {% if section.settings.imgForProductProps %}
              {{ section.settings.imgForProductProps | image_url: width: 512 | image_tag:
              loading: 'lazy',
              width: section.settings.imgForProductProps.width,
              height: section.settings.imgForProductProps.height,
              class: "img-fluid image-1",
              alt: section.settings.imgForProductProps.alt | escape }}
           {%- endif -%}
          </div>
        </div>
        <div class="itemWraper">
            
        </div>
      </div>
    </section>
  </div>
</div>

<style>
#seeItInAction-{{ section.id }}{
  width: 100%;
  display: block;
  {% if section.settings.select_bg_style == "backColor" %}
    background: {{ section.settings.backGcolor }};
  {% elsif section.settings.select_bg_style == "backImage" %}
    background-image: url('{{ section.settings.backImageUrl }}');
  {% endif %}
}
#seeItInAction-{{ section.id }} .framerBigHold{
  width: 80%;
  height: 100%;
  max-width: 1140px;
  margin: auto;
  display: block;
  align-items: unset;
  justify-content: space-between;
  padding-bottom: 50px;
}
#seeItInAction-{{ section.id }} .itemWraper{
  display: block;
  height: 100%;
  align-content: baseline;
  justify-content: center;
}
#seeItInAction-{{ section.id }} .itemWraper h2{
  color: #b4b9ff;
  padding-top: 30px;
  font-size: 40px !important;
  line-height: 1.2em !important;
  letter-spacing: -3px !important;
  text-transform: uppercase !important;
  font-weight: 400 !important;
  font-family: spaceBoard !important;
  text-align: center;
}
.tikVideoContainer{
  width: 250px!important;
  height: 500px;
  overflow: hidden;
  border-radius: 15px;
  background: #fff;
  margin: 50px 20px;
  min-width: 250px;
}
.tik-video{
  width: 100%;
  height: 100%;
}
@media(max-width: 950px){
  #seeItInAction-{{ section.id }} .framerBigHold{
    display: block;
    padding: 10px 0;
  }
  #seeItInAction-{{ section.id }} .itemWraper{
    padding-left: 0 !important;
  }
}
</style>

{% schema %}
{
  "name": "see it in action",
  "settings": [
    {
      "type": "header",
      "content": "How it Feels Settings"
    },
    {
      "type": "select",
      "id": "select_bg_style",
      "label": "Background style",
      "options": [
        {
          "value": "backColor", 
          "label": "Background color"
        },
        {
          "value": "backImage", 
          "label": "Background image"
        }
      ]
    },
    {
      "type": "color",
      "id": "backGcolor",
      "label": "Background color"
    },
    {
      "type": "url",
      "id": "backImageUrl",
      "label": "Background image URL"
    }
  ],
  "blocks": [
    {
      "type": "seeIt-inAction",
      "name": "see it in action",
      "settings": [
         {
          "type": "header",
          "content": "Video Settings"
        },
        {
          "type": "url",
          "id": "video_link",
          "label": "Upload Video"
        },
        {
          "type": "image_picker",
          "id": "poster_link",
          "label": "Video Poster Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "see it in action"
    }
  ]
}
{% endschema %}
