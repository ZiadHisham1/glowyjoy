<div class="row">
  <div class="column">
    <section class="beforeAndAfter-section">
      <div class="framerBigHold">
        <div class="typoCnt">
          <h2>
           there’s the knockoffs and there’s the original
          </h2>
          <p>
            Avoid the cheap knockoffs and experience the difference with SpaceBuddy’s vibrant and high quality projection
          </p>
        </div>
        <div class="cl-gd-fr-slCnt">
          <div class="slider-container">
          <div class="imag-frame before-image">
            {%- if section.settings.before_image -%}
            <img src="{{ section.settings.before_image | image_url: width: 512 }}" 
             loading="lazy" 
             width="{{ section.settings.before_image.width }}" 
             height="{{ section.settings.before_image.height }}" 
             alt="{{ section.settings.before_image.alt }}" 
             class="slider-image" />
            {%- endif -%}
          </div>
          
          <div class="imag-frame after-image">
            {%- if section.settings.after_image -%}
            <img src="{{ section.settings.after_image | image_url: width: 512 }}" 
             loading="lazy" 
             width="{{ section.settings.after_image.width }}" 
             height="{{ section.settings.after_image.height }}" 
             alt="{{ section.settings.after_image.alt }}" 
             class="slider-image" />
            {%- endif -%}
          </div>
          
          <div class="slider-line"></div>
        </div>
        </div>
      </div>
    </section>
  </div>
</div>

<style>
.framerBigHold{
  width: 80%;
  margin: auto;
  padding: 30px;
  display: flex;
  justify-content: space-between;
}
.typoCnt{
      
}
.beforeAndAfter-section{
  width: 100%;
  height: calc({{ section.settings.before_image.width }}px - 100px) ;
  display: block;
  background: #000;
}
.cl-gd-fr-slCnt{
  width: 350px;
  height: 500px;
}
.slider-container{
  position: absolute;
  width: 350px;
  height: 500px;
  cursor: pointer;
  background: #fff;
  overflow: hidden;
  border-radius: 15px;
  box-shadow: 0 0 10px #7b9cfd;
  border: solid 3px #240073;
} 
.imag-frame img{
  width: 500px;
  height: 600px;
  object-fit: cover;
}
.before-image{
  width: auto;
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
  z-index:2;
  overflow: hidden;
}
.after-image{
  filter: brightness(30%);
}
.slider-line{
  width: 3px;
  height: 100%;
  background-color: #fff;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  pointer-events: none;
}
</style>

<script>
  const container = document.querySelector('.slider-container');
  const imageBefore = document.querySelector('.before-image');
  const line = document.querySelector('.slider-line');

  container.addEventListener('mousemove', e => {
    imageBefore.style.width = `${e.layerX}px`;
    line.style.left = `${e.layerX}px`;
  })
</script>

{% schema %}
{
  "name": "Section name",
  "settings": [
    {
      "type": "header",
      "content": "Before & After Settings"
    },
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "Before Image"
    },
    {
      "type": "image_picker",
      "id": "after_image",
      "label": "After Image"
    }
  ],
  "presets": [
    {
      "name": "Before and After"
    }
  ]
}
{% endschema %}