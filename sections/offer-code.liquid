<style>
	.offer-code-area {
    position: relative;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
		{% if section.settings.section_bg_image_enable %}
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center;
		{% endif %}
  }
	{% if section.settings.section_bg_color_enable %}
	.offer-code-area::before {
    background-color: {{ section.settings.section_bg_color }};
		content: '';
		position: absolute;
		bottom: 0px;
		left: 0px;
		right: 0px;
		width: 100%;
		height: 80px;
		z-index: -1;
	}
	{% endif %}
  @media (max-width: 1199px) {
    .offer-code-area {
      padding-top: {{ section.settings.section_padding_top_ip }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
    }
  }
  @media (max-width: 767px) {
    .offer-code-area {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

	/* main css */
	.offer-code-area .offer-code-bg {
		position: relative;
		{% if section.settings.content_bg_image_enable %}
		background-image: url('{% if section.settings.content_bg_image %}{{ section.settings.content_bg_image | image_url }}{% else %}https://dummyimage.com/1380x220/232323/FFFFFF{% endif %}');
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center;
		{% endif %}
		{% if section.settings.content_bg_image_enable %}
		padding: 100px 30px 30px 30px;
		{% else %}
		padding: 50px 30px;
		{% endif %}
		display: flex;
		justify-content: center;
	}
	{% if section.settings.content_bg_image_enable %}
  .offer-code-area .offer-code-bg::after {
    background-image: url('{% if section.settings.section_after_image %}{{ section.settings.section_after_image | image_url }}{% else %}https://dummyimage.com/750x130/232323/FFFFFF{% endif %}');
    content: '';
    position: absolute;
    top: 0px;
		right: 0px;
		bottom: 0px;
		left: 0px;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    z-index: -1;
		display: none;
  }
	{% endif %}
	.offer-code-area .offer-code-bg .offer-code-content {
    display: flex;
    flex-wrap: wrap;
		align-items: center;
		{% if settings.enable_rtl %}
		margin-right: -30px;
		{% else %}
		margin-left: -30px;
		{% endif %}
		width: 50%;
	}
	.offer-code-area .offer-code-bg .offer-code-content .section-capture,
	.offer-code-area .offer-code-bg .offer-code-content .offer-code {
		width: calc(50% - 30px);
		{% if settings.enable_rtl %}
		margin-right: 30px;
		{% else %}
		margin-left: 30px;
		{% endif %}
	}
	@media (max-width: 1399px) {
		.offer-code-area .offer-code-bg .offer-code-content {
			width: 66.67%;
		}
	}
	@media (max-width: 1199px) {
		.offer-code-area .offer-code-bg .offer-code-content {
			width: 75%;
		}
	}
	@media (max-width: 991px) {
		.offer-code-area .offer-code-bg {
			background-image: none;
			padding: 30px;
		}
		.offer-code-area .offer-code-bg::after {
			display: block;
		}
		.offer-code-area .offer-code-bg .offer-code-content {
			width: 100%;
		}
	}
	@media (max-width: 767px) {
		.offer-code-area .offer-code-bg {
			padding: 30px 12px;
		}
		.offer-code-area .offer-code-bg .offer-code-content {
			{% if settings.enable_rtl %}
			margin-right: -12px;
			{% else %}
			margin-left: -12px;
			{% endif %}
		}
		.offer-code-area .offer-code-bg .offer-code-content .section-capture,
		.offer-code-area .offer-code-bg .offer-code-content .offer-code {
			{% if settings.enable_rtl %}
			margin-right: 12px;
			{% else %}
			margin-left: 12px;
			{% endif %}
			width: calc(50% - 12px);
		}
	}
	@media (max-width: 600px) {
		.offer-code-area .offer-code-bg .offer-code-content .section-capture,
		.offer-code-area .offer-code-bg .offer-code-content .offer-code {
			width: calc(100% - 12px);
		}
		.offer-code-area .offer-code-bg .offer-code-content .offer-code {
			margin-top: 25px;
		}
	}

	/* title css */
	.offer-code-area .offer-code-bg .offer-code-content .section-capture {
		margin-bottom: 0px;	
	}
	
	/* code css */
	.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy {
		padding: 0px 15px;
	}
	.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy .password-content .clipboard {
    background-color: var(--font-color-secondary);
		display: flex;
    align-items: center;
	}
	.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy .password-content .clipboard .code-text {
    display: flex;
    align-items: center;
		margin: 0 auto;
		padding: 0px 12px;
	}
	.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy .password-content .clipboard .code-text span.code-label {
    color: #FFFFFF;
    font-weight: var(--font-subtitle-weight-body);
    text-transform: uppercase;
	}
	.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy .password-content .clipboard .code-text span.password-span {
		color: var(--font-color-primary);
		{% if settings.enable_rtl %}
		margin-right: 5px;
		{% else %}
		margin-left: 5px;
		{% endif %}
		font-weight: var(--font-subtitle-weight-body);
    text-transform: uppercase;
	}
	.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy .password-content .clipboard button.copy-btn {
		color: #FFFFFF;
		font-size: 18px;
		width: 55px;
    height: 55px;
    display: flex;
    align-items: center;
    justify-content: center;
		border-left: 1px dashed var(--theme-border-color);
	}
	@media (max-width: 600px) {
		.offer-code-area .offer-code-bg .offer-code-content .offer-code .password-copy {
			padding: 0px;
		}
	}
</style>