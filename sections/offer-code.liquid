<section class="offer-code-area" {% if section.settings.section_bg_image_enable %} style="background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1920x420/232323/FFFFFF{% endif %}');"{% endif %}>
  <div class="container">
		<div class="row">
			<div class="col">
				<div class="offer-code-bg">
					<div class="offer-code-content">
						{% if section.settings.section_title_1 != '' or section.settings.section_title_2 != '' %}
						<div class="section-capture">
							<div class="section-title">
								<h2 style="color: {{ section.settings.section_title_color }};">
									{% if section.settings.section_title_1 != '' %}
									<span class="b-text">{{ section.settings.section_title_1 }}</span>
									{% endif %}  
									{% if section.settings.section_title_2 != '' %}
									<span class="n-text">{{ section.settings.section_title_2 }}</span>
									{% endif %}  
								</h2>
							</div>
						</div>
						{% endif %}
						<div class="offer-code">
							<div class="password password-copy">
								<div class="password-content">
									<div class="clipboard">
										<div class="code-text">
											{% if section.settings.offer_code_label != '' %}
											<span class="code-label">{{ section.settings.offer_code_label }}</span>
											{% endif %}
											<span id="pwd_spn" class="password-span">{{ section.settings.offer_code_value }}</span>
										</div>
										<button class="copy-btn" id="cp_btn"><i class="far fa-copy"></i></button>
									</div>
								</div>
							</div>
						</div>
					</div>	
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	document.getElementById("cp_btn").addEventListener("click", copy_password);
	function copy_password() {
		var copyText = document.getElementById("pwd_spn");
		var textArea = document.createElement("textarea");
		textArea.value = copyText.textContent;
		document.body.appendChild(textArea);
		textArea.select();
		document.execCommand("Copy");
		textArea.remove();
	}
</script>

