<section class="home-faq-area">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="home-faq-block">
          <div class="home-faq-image">
            <span class="banner-block">
              {% comment %}
              <img src="https://dummyimage.com/750x680/333333/999999" class="img-fluid" alt="image">
              {% endcomment %}
                        
              {%- if section.settings.home_faq_image -%}
              {{ section.settings.home_faq_image | image_url: width: 1024 | image_tag:
              loading: 'lazy',
              width: section.settings.home_faq_image.width,
              height: section.settings.home_faq_image.height,
              class: "img-fluid image-1",
              alt: section.settings.home_faq_image.alt | escape }}
              {%- else -%}  
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </span>
            <div class="banner-content">
              <div class="content-block">
                {% if section.settings.banner_label_text != '' %}
                <span class="label">{{ section.settings.banner_label_text }}</span>
                {% endif %}
                {% if section.settings.banner_title != '' %}
                <h2 class="title" style="color: {{ section.settings.banner_title_color }};">{{ section.settings.banner_title }}</h2>
                {% endif %}
              </div>
              <div class="video-block">
                <a href="{{ section.settings.video_url }}" class="video-btn play-button popup-youtube">
                  <span class="icon"><i class="feather-play"></i></span>
                </a>
              </div>
            </div>
          </div>
          <div class="home-faq-content">
            {% if section.settings.faq_content_title != '' %}
            <div class="faq-content-title">
              <h2 class="title">{{ section.settings.faq_content_title }}</h2>
            </div>
            {% endif %}
            <div class="faq-content">
              <ul class="faq-content-ul" id="collapse-faq">
                {% assign i = 0 %}
                {% for block in section.blocks %}
                {% assign i = i | plus: 1 %}
                <li class="faq-content-li">
                  <div class="faq-item">
                    <a href="#collapse-{{ section.id }}-{{ i }}" class="question" data-bs-toggle="collapse" {% if forloop.first %}aria-expanded="true"{% else %}aria-expanded="false"{% endif %}>
                      <h6 class="que">{{ block.settings.accordion_title }}</h6>
                      <span class="que-accordian"><i class="feather-plus"></i></span>
                    </a>
                    <div class="ans-accordian collapse{% if forloop.first %} show{% endif %}" id="collapse-{{ section.id }}-{{ i }}" data-bs-parent="#collapse-faq">
                      <div class="accordian-text">
                        {% if block.settings.accordion_ans1 != '' %}
                        <p>{{ block.settings.accordion_ans1 }}</p>
                        {% endif %}
                        {% if block.settings.accordion_ans2 != '' %}
                        <p>{{ block.settings.accordion_ans2 }}</p>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

