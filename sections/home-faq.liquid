<style>
.home-faq-area {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  {% if section.settings.section_bg_color_enable %}
  background-color: {{ section.settings.section_bg_color }};
  {% endif %}
  {% if section.settings.section_bg_image_enable %}
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  {% endif %}
  {% if section.settings.border_enable %}
  border-top: {{ section.settings.border }}px solid {{ section.settings.border_color | color_modify: 'alpha', section.settings.border_color_opacity }};
  {% endif %}
}
@media (max-width: 1199px) {
  .home-faq-area {
    padding-top: {{ section.settings.section_padding_top_ip }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .home-faq-area {
    padding-top: {{ section.settings.section_padding_top_xs }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
  }
}

/* main css */
.home-faq-area .home-faq-block {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: -30px;
  {% if settings.enable_rtl %}
  margin-right: -30px;
  {% else %}
  margin-left: -30px;
  {% endif %}
}
.home-faq-area .home-faq-block .home-faq-image,
.home-faq-area .home-faq-block .home-faq-content {
  width: calc(50% - 30px);
  margin-top: 30px;
  {% if settings.enable_rtl %}
  margin-right: 30px;
  {% else %}
  margin-left: 30px;
  {% endif %}
}
@media (max-width: 991px) {
  .home-faq-area .home-faq-block .home-faq-image,
  .home-faq-area .home-faq-block .home-faq-content {
    width: calc(100% - 30px);
  } 
}

/* image css */
.home-faq-area .home-faq-block .home-faq-image {
  position: relative;
} 
.home-faq-area .home-faq-block .home-faq-image span.banner-block svg {
  width: 100%;
}
.home-faq-area .home-faq-block .home-faq-image span.banner-block img {
  border-radius: var(--sti-border-radius);
  {% if settings.enable_rtl %}
  transform: scale(-1);
  {% endif %}
}
.home-faq-area .home-faq-block .home-faq-image .banner-content {
  position: absolute;
  top: 30px;
  bottom: 30px;
  {% if settings.enable_rtl %}
  right: 30px;
  {% else %}
  left: 30px;
  {% endif %}
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .content-block {
  width: 58.33%;
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .content-block span.label {
  background-color: #16b36e;
  color: #FFFFFF;
  font-size: 11px;
  padding: 8px 16px;
  font-weight: var(--font-custom-weight-section-header);
  text-transform: uppercase;
  border-radius: 5px;
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .content-block h2.title {
  font-size: 40px;
  margin-top: 10px;
  font-weight: var(--font-custom-weight-section-header);
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .video-block a.video-btn span.icon {
  position: relative;
  background-color: var(--font-color-primary);
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .video-block a.video-btn span.icon::before {
  -webkit-animation: hovereffect 2s linear infinite;
  -moz-animation: hovereffect 2s linear infinite;
  animation: hovereffect 2s linear infinite;
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .video-block a.video-btn span.icon::after {
  -webkit-animation: hovereffect 4s linear infinite;
  -moz-animation: hovereffect 4s linear infinite;
  animation: hovereffect 4s linear infinite;
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .video-block a.video-btn span.icon::before,
.home-faq-area .home-faq-block .home-faq-image .banner-content .video-block a.video-btn span.icon::after {
  background-color: var(--font-color-primary);
  content: '';
  position: absolute;
  top: 0;
  {%- if settings.enable_rtl -%}
  right: 0px;
  {%- else -%}
  left: 0px;
  {%- endif -%}
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
@keyframes hovereffect {
  0%{
    opacity: 0.5;
  }
  40%{
    opacity: 0.7;
  }
  100%{
    opacity: 0;
    -webkit-transform: scale(1.7);
    -moz-transform: scale(1.7);
    -ms-transform: scale(1.7);
    transform: scale(1.7);
  }
}
.home-faq-area .home-faq-block .home-faq-image .banner-content .video-block a.video-btn span.icon i {
  color: #FFFFFF;
  font-size: 18px;
  z-index: 2;
  line-height: 1;
  display: flex;
}
@media (max-width: 1199px) {
  .home-faq-area .home-faq-block .home-faq-image .banner-content .content-block h2.title {
    font-size: 30px;
    margin-top: 12px;
  }
}
@media (max-width: 767px) {
  .home-faq-area .home-faq-block .home-faq-image .banner-content {
    top: 20px;
    bottom: 20px;
    {% if settings.enable_rtl %}
    right: 20px;
    {% else %}
    left: 20px;
    {% endif %}
  }
  .home-faq-area .home-faq-block .home-faq-image .banner-content .content-block h2.title {
    font-size: 24px;
    margin-top: 14px;
  }
}
@media (max-width: 320px) {
  .home-faq-area .home-faq-block .home-faq-image .banner-content .content-block h2.title {
    font-size: 20px;
  }
}

/* content css */
.home-faq-area .home-faq-block .home-faq-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.home-faq-area .home-faq-block .home-faq-content .faq-content-title {
  width: 100%;
  margin-bottom: -70px;
  text-align: center;
}
.home-faq-area .home-faq-block .home-faq-content .faq-content-title h2.title {
  color: var(--extra-color-body);
  font-size: 180px;
  {% if settings.other_custom_font_handle_enable %}
  font-family: '{{ settings.other_custom_font_handle }}', sans-serif;
  {% endif %}
  font-weight: var(--font-custom-weight-body);
  line-height: 1;
}
.home-faq-area .home-faq-block .home-faq-content .faq-content {
  background-color: #FFFFFF;
  width: 100%;
}
.home-faq-area .home-faq-block .home-faq-content .faq-content ul.faq-content-ul li.faq-content-li {
  margin-top: 30px;
}
.home-faq-area .home-faq-block .home-faq-content .faq-content ul.faq-content-ul li.faq-content-li:first-child {
  margin-top: 0px;
