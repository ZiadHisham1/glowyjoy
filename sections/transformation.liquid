
<section id="transformation-section-area-{{ section.id }}" class="transformation-section-area {% if section.settings.background_style == 'bg-style1' %}bg-style1{% else %}bg-style2{% endif %}">
  <div class="container">
    <div class="row">
      <div class="col">
        <div id="transformation-main-{{ section.id }}" class="transformation-main">
          <div class="image">
            {%- if section.settings.trans_imag -%}
              {{ section.settings.trans_imag | image_url: width: 512 | image_tag:
              loading: 'lazy',
              width: section.settings.trans_imag.width,
              height: section.settings.trans_imag.height,
              class: "img-fluid image-1",
              alt: section.settings.trans_imag.alt | escape }}
              {%- endif -%}
          </div>
          <div class="title-capture">
            <h1>{{ section.settings.first_h1 }}</h1>
            <p>{{ section.settings.description }}</p>
           <div class="btnHolder">
             <a 
            id="" 
            href="{{ section.settings.transformation_button_url }}" 
            class="discount-buy-btn">
            {{ section.settings.transformation_button_text }}
             </a>
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "transformation",
    "settings": [
      {
      "type": "select",
      "id": "background_style",
      "label": "background Style",
      "options": [
        {
          "label": "background Style one",
          "value": "bg-style1"
        },
        {
          "label": "background Style two",
          "value": "bg-style2"
        }
      ],
      "default": "bg-style1"
      },
      {
        "type": "color",
        "id": "bg_color1_radial",
        "label": "background center color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "bg_color2_radial",
        "label": "background outer color",
        "default": "#000"
      },
      {
        "type": "url",
        "id": "trans_url",
        "label": "background image URL",
        "info": "recommended 16 : 9"
      },
      {
        "type": "image_picker",
        "id": "trans_imag",
        "label": "transformation image",
        "info": "recommended 500 X 400"
      },
      {
        "type": "text",
        "id": "first_h1",
        "label": "first heading text",
        "default": "heading one"
      },
      {
        "type": "text",
        "id": "description",
        "label": "section description",
        "default": "description"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "heading color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "desc_color",
        "label": "describtion color",
        "default": "#000"
      },
      {
        "type": "text",
        "id": "transformation_button_text",
        "label": "transformation text",
        "default": "Explore"
      },
      {
      "type": "url",
      "id": "transformation_button_url",
      "label": "Button url"
    },
    {
      "type": "select",
      "id": "transformation_button_style",
      "label": "Button Style",
      "options": [
        {
          "label": "Button Style1",
          "value": "btn-style1"
        },
        {
          "label": "Button Style2",
          "value": "btn-style2"
        },
        {
          "label": "Button Style3",
          "value": "btn-style3"
        }
      ],
      "default": "btn-style1"
    }
    ],
    "presets":[
      {
        "name":"transformation section",
        "category":"version 1.0"
      }
    ]
  }
{% endschema %}

<style>
  #transformation-section-area-{{ section.id }} {
    background-image: url("{{ section.settings.trans_url }}");
    background-size: cover!important;
    background-position: center center!important;
    flex-direction: row;
    /* background-attachment: fixed!important; */
  }
  .transformation-section-area{
    background-size: cover!important;
    background-position: center center!important;
    /* background-attachment: fixed!important; */
  }
  .bg-style2{
    background-image: radial-gradient(circle at top, {{ section.settings.bg_color1_radial }} 2%, {{ section.settings.bg_color2_radial }})!important;
    background-size: cover!important;
    background-position: center center!important;
    /* background-attachment: fixed!important; */
  }
  
  .transformation-main{
    display: flex; 
    background-color: transparent;
  }

@media (max-width: 1200px){
    .transformation-main{
      display: block;
    }
  }
  
  .transformation-main .image{
    width:50%;
    overflow:hidden;
    margin: 20px 0 20px 0;
    background-color: transparent;
  }

@media (max-width: 1200px){
  .transformation-main .image{
    width: auto;
  }
}

  .transformation-main .title-capture {
    width: 50%;
    margin: 20px 0 20px 40px;
  }

@media (max-width: 1200px){
   .transformation-main .title-capture{
    width: auto;
    margin: 0;
    padding: 0 20px 0 20px;
  }}

  #transformation-main-{{ section.id }} .title-capture h1{
    font-weight: 600;
    color: {{ section.settings.heading_color}};
  }

  #transformation-main-{{ section.id }} .title-capture p{
    color: {{ section.settings.desc_color}};
    font-weight: 500;
    text-align: justify;
  }
  
  .transformation-main .title-capture h2,
  .transformation-main .title-capture p{
    margin: 10px 0 10px 0;
  }

  .transformation-main .title-capture .exploreBtn{
    margin: 20px;
    scale: 1.3;
  }

@media (max-width: 1200px){
  .transformation-main .title-capture h1,
  .transformation-main .title-capture p,
  .transformation-main .title-capture .exploreBtn{
    text-align: left;
    justify-content: center;
  }
  
}

</style>