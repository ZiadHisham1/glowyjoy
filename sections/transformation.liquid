    bottom: 0;
    box-shadow: 0 .125rem 0 0 rgba(255, 255, 255, 0.2) inset, .125rem 0 0 0 rgba(255, 255, 255, .2) inset, -.125rem 0 0 0 rgba(255, 255, 255, .2) inset, 0 -.0625rem 0 .0625rem #7a7a7a inset, 0 .0625rem 0 0 #6f6f6f inset;
